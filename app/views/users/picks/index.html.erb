<div class="w-full text-center" data-controller="user-picks">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if @picks.blank? %>
    <div class="font-bold text-4xl mb-4">You have no picks!</div>
    <%= button_to "Create Picks", user_picks_edit_path(@user), method: :get, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
  <% else %>
    <div class="max-sm:hidden flex flex-row justify-evenly">
      <div class="w-1/3"></div>
      <div class="w-1/3 font-bold text-4xl mb-4">My Picks</div>
      <div class="w-1/3">
        <%= button_to "Edit Picks", user_picks_edit_path(@user), method: :get, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
      </div>
    </div>
    
    <div class="sm:hidden">
      <div class="font-bold text-4xl mb-4">My Picks</div>
      <%= button_to "Edit Picks", user_picks_edit_path(@user), method: :get, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
    </div>

    <div class="flex flex-col justify-center">
      <% @picks.each do |pick| %>
        <%= render partial: "users/picks/game", locals: { pick: pick } %>
      <% end %>
    </div>
  <% end %>
</div>
