<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Dashboard" %>

  <div id="games" class="container flex flex-wrap items-top max-w-auto place-content-center overflow-auto">
    <% if @games.blank? %>
      No Games Today!
    <% else %>
      <% @games.each do |game| %>
        <%= link_to game do %>
          <%= render partial: "games/card", locals: { game: game } %>
        <% end %>
      <% end %>
    <%end%>
  </div>
</div>

