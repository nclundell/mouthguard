<div class="m-4" data-controller="components--pick">
  <div class="font-semibold text-xl py-2">
    <%= @pick.game.notes %>
    <div class="text-sm text-black/75">
      <%= @pick.game.tv %> | <%= time_tag @pick.game.start, "data-local": "time", "data-format": "%b. %e @ %l:%M %p" %>
    </div>
  </div>
  <div class="flex justify-center" data-components--pick-target="bowl">
    <div>
      <label
        class="relative flex border-4 p-2 rounded-lg shadow-sm size-40"
        data-components--pick-target="awayTeam"
        data-picked=<%= @pick.team_id == @pick.game.away.id %>
      >
        <div class="flex flex-col mx-auto">
          <%= image_tag @pick.game.away.logos.first %>
        </div>
        <div class="absolute hidden" data-components--pick-target="awayTeamCheckmark">
          <%= icon "check-circle", class: "text-blue-500 size-8", variant: "solid" %>
        </div>
      </label>
      <div class="font-semibold text-center">
        <%= @pick.game.away.school %>
      </div>
    </div>
    <span class="font-semibold content-center px-4">vs</span>
    <div>
      <label
        class="relative flex border-4 p-2 rounded-lg shadow-sm size-40"
        data-components--pick-target="homeTeam"
        data-picked=<%= @pick.team_id == @pick.game.home.id %>
      >
        <div class="flex flex-col mx-auto">
          <%= image_tag @pick.game.home.logos.first %>
        </div>
        <div class="absolute hidden" data-components--pick-target="homeTeamCheckmark">
          <%= icon "check-circle", class: "text-blue-500 size-8", variant: "solid" %>
        </div>
      </label>
      <div class="font-semibold text-center">
        <%= @pick.game.home.school %>
      </div>
    </div>
  </div>
</div>
